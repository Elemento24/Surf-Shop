<% layout('layouts/boilerplate') -%>

<div class="newPost">
    <h1 class = "heading-primary heading-primary--light newPost__heading mb-medium">New Post</h1>

    <form class="form newPost__form" action="/posts" method="POST" enctype="multipart/form-data">
        <div class="newPost__form-group">
            <label for = "title" class = "form__label">Title</label>
            <input class = "form__input" id = "title" name="post[title]" type="text" placeholder='Title' required>
        </div>
        <div class="newPost__form-group--price">
            <label for = "price" class = "form__label">Price</label>
            <input class = "form__input" id = "price" name="post[price]" type="number" step="0.01" placeholder='Price' required>
        </div>
        <div class="newPost__form-group--location">
            <label for = "location" class = "form__label">Location</label>
            <input class = "form__input" id = "location" name="post[location]" type="text" placeholder='Location' required>
        </div>
        <div class="newPost__form-group--description">
            <label for = "desp" class = "form__label">Description</label>
            <textarea  class = "form__input form__input--textarea" id = "desp" name="post[description]" placeholder='Description' required></textarea>
        </div>
        <div class="newPost__form-group--file">
            <label for = "images" class = "form__label--file">Images</label>
            <input id = "images" class = "form__input--file" type="file" accept="images/*" name="images" multiple required>
        </div>
        <p class="newPost__info" >(Maximum of 4 Images can be Uploaded)</p>
        <button class = "newPost__btn btn btn--blue">Submit</button>
    </form>
</div>